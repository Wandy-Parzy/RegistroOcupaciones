@page "/C_personas"
@inject PersonaBLL personaBLL

<EditForm Model="lista">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            <h3>Consultas de personas</h3>
        </div>

        <div class="card-body">
            <form>
                <div class="input-group d-flex align-items-end">
                    <button type="button" class="btn btn-warning" @onclick="Buscar">
                        <i class="oi oi-magnifying-glass mr-2" > Generar </i>
                    </button>
                </div>
            </form>
        </div>

        <table class="table table-secondary">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>PersonaId</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th>FechaNacimiento</th>
                    <th>OcupaciónId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in lista)
                {
                    <tr>
                        <td>@item.PersonaId</td>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Celular</td>
                        <td>@item.Email</td>
                        <td>@item.Direccion</td>
                        <td>@item.FechaNacimiento</td>
                        <td>@item.OcupacionId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code {
    public Ocupaciones  ocupaciones {set;get;}= new Ocupaciones();
    public Persona personas { set; get; } = new Persona();
    public List<Ocupaciones> listas { get; set; } = new List<Ocupaciones>();
    public List<Persona> lista { get; set; } = new List<Persona>();

    [Inject]
    private OcupacionesBLL ocupacionesBLL { get; set; }
 
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
    
    private void Buscar()
    {   
        lista = personaBLL.GetList(o => true);
    }
}
